# Set the problem type
physics.problem = slipweak

# Physical parameters: S- and P- wave speed, shear modulus
physics.cs = 3
# physics.cp = 3 by default we set cp = sqrt(3)*cs
physics.mu = 30

# Set the background values
#                      vx   vy   vz  sxx   syy  szz  sxy  sxz  syz
physics.background =    0    0   0     0  -120    0   70    0    0

physics.f_static  = 0.677
physics.f_dynamic = 0.525
physics.d_weak    = 0.4

physics.center_fric_box = 16 16
physics.width_fric_box  = 15 15
physics.outside_f_static = 10000

physics.num_patches = 3
physics.tau_patches = 11.6 -8 8
# physics.tau_patches = 11.6 0 0
physics.xc_patches  =  16 8.5 23.5
physics.zc_patches  = 8.5 8.5 8.5
physics.xw_patches  = 1.5 1.5  1.5
physics.zw_patches  = 1.5 1.5 1.5

# Turn on some output
# comp.verbosity = 10
comp.verbosity = 1

# Number of steps, final time, and time step
# comp.restart_file = slipweak/check.50.3d.hdf5
comp.max_step = 1
comp.max_time = 12
# comp.fixed_dt = 0.002

# Size of the domain's longest dimension
comp.domain_length = 32.0

# Coarsest grid
comp.num_cells = 160 80 80

# # 0 : Outflow
# # 1 : Free surface
# # 2 : Fault (must be y_bound 2 X)
comp.x_boundary  = 0 0
comp.y_boundary  = 2 0
comp.z_boundary  = 0 1


# Grid refinement
comp.max_level = 1
# For 2D
# comp.ref_ratio = 4 4 4 4 4 4 4 4 4 
# For 3D
comp.ref_ratio = 2 2 2 2 2

# Regridding parameters
comp.regrid_interval = 2 2 2 2 2 2 2 2 2 2
comp.tag_buffer_size = 2
comp.refine_thresh = 0.1

# Grid generation parameters
comp.block_factor = 2
comp.max_grid_size = 32
comp.fill_ratio = 1

# Normal predictor method
# CTU : Corner Transport Upwind
# PPM : Piecewise Parabolic Method
# PLM : Piecewise Linear Method (I think, not positive though)
comp.normal_predictor = PPM

# Slope computation parameters
comp.use_fourth_order_slopes = 1
comp.use_prim_limiting = 1
comp.use_char_limiting = 0
comp.use_flattening = 1

# Artificial viscosity
comp.use_artificial_viscosity = 1
comp.artificial_viscosity = 0.1

# Plot file information
comp.plot_interval = 10
# comp.plot_interval = 1
comp.plot_prefix  = slipweak/slipweak.

# Checkpoint file information
comp.checkpoint_interval = 10
# comp.checkpoint_interval = 1
comp.chk_prefix = slipweak/check.

# Restart file information
# comp.restart_file = check.20.2d.hdf5

# CFL multipliers
comp.cfl = 0.9
comp.initial_cfl = 0.9

# Variable time step parameters
comp.max_dt_growth = 1
comp.dt_tolerance_factor = 1
