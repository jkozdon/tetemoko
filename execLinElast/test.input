# Physical parameters: S- and P- wave speed, shear modulus
physics.cs =  3
physics.cp =  5.2
physics.mu = 30

physics.r0   =  0.5
physics.mag  = 1.0
physics.sig  = 0.005

# Turn on some output
comp.verbosity = 3

# Number of steps, final time, and time step
comp.max_step = 200
comp.max_time = 0.064
# comp.fixed_dt = 0.002

# Size of the domain's longest dimension
comp.domain_length = 1.0

# Coarsest grid
# comp.num_cells = 32 8 4
comp.num_cells = 64 64 8
comp.is_periodic = 0 0 0

# Grid refinement
comp.max_level = 2
# For 2D
comp.ref_ratio = 2 2 2 2 2
# For 3D
# comp.ref_ratio = 2 2 2 2 2

# Regridding parameters
comp.regrid_interval = 2 2 2 2 2 2
comp.tag_buffer_size = 3
comp.refine_thresh = 0.05

# Grid generation parameters
comp.block_factor = 4
comp.max_grid_size = 32
comp.fill_ratio = 0.75

# Normal predictor method - PLM or PPM
comp.normal_predictor = PPM

# Slope computation parameters
comp.use_fourth_order_slopes = 1
comp.use_prim_limiting = 1
comp.use_char_limiting = 0
comp.use_flattening = 1

# Artificial viscosity
comp.use_artificial_viscosity = 1
comp.artificial_viscosity = 0.1

# Plot file information
comp.plot_interval = 10
# comp.plot_interval = 1
comp.plot_prefix  = test.

# Checkpoint file information
comp.checkpoint_interval = -1
# comp.checkpoint_interval = 1
# comp.chk_prefix = check.

# Restart file information
# comp.restart_file = check.20.2d.hdf5

# CFL multipliers
comp.cfl = 0.8
comp.initial_cfl = 0.3

# Variable time step parameters
comp.max_dt_growth = 1.1
comp.dt_tolerance_factor = 1.1
