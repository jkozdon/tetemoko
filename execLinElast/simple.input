# Set the problem type
physics.problem = simple

# Physical parameters: S- and P- wave speed, shear modulus
physics.cs = 1
physics.cp = 3
physics.mu = 1
physics.r0   =  0.5

physics.background = 10 20 30 40 50 60 70 80 90

#                vx   vy   vz  sxx  syy  szz  sxy  szy  sxz
# physics.mag  =   10   10   10   10   10   10   10   10   10
physics.mag  =   0   0   0   0   0   0   0   0   0
# physics.mag  =   10   10    0    0    0    0    0    0    0
physics.sig  = 0.001

# Turn on some output
# comp.verbosity = 10
comp.verbosity = 1

# Number of steps, final time, and time step
comp.max_step = 200
comp.max_time = 0.1
# comp.fixed_dt = 0.002

# Size of the domain's longest dimension
comp.domain_length = 1.0

# Coarsest grid
# comp.num_cells = 32 8 4
comp.num_cells = 64 64 32
comp.is_periodic = 0 0 0

# If not period what boundary type
# 0 : Outflow
# 1 : Free surface
comp.x_boundary  = 0 0
comp.y_boundary  = 1 1
comp.z_boundary  = 0 0


# Grid refinement
comp.max_level = 1
# For 2D
comp.ref_ratio = 4 4 4 4 4
# For 3D
# comp.ref_ratio = 2 2 2 2 2

# Regridding parameters
comp.regrid_interval = 2 2 2 2 2 2
comp.tag_buffer_size = 2
comp.refine_thresh = 0.01

# Grid generation parameters
comp.block_factor = 4
comp.max_grid_size = 32
comp.fill_ratio = 0.75

# Normal predictor method
# CTU : Corner Transport Upwind
# PPM : Piecewise Parabolic Method
# PLM : Piecewise Linear Method (I think, not positive though)
comp.normal_predictor = CTU

# Slope computation parameters
comp.use_fourth_order_slopes = 0
comp.use_prim_limiting = 1
comp.use_char_limiting = 0
comp.use_flattening = 1

# Artificial viscosity
comp.use_artificial_viscosity = 1
comp.artificial_viscosity = 0.1

# Plot file information
comp.plot_interval = 1
# comp.plot_interval = 1
comp.plot_prefix  = test.

# Checkpoint file information
comp.checkpoint_interval = -1
# comp.checkpoint_interval = 1
# comp.chk_prefix = check.

# Restart file information
# comp.restart_file = check.20.2d.hdf5

# CFL multipliers
comp.cfl = 0.8
comp.initial_cfl = 0.1

# Variable time step parameters
comp.max_dt_growth = 1.1
comp.dt_tolerance_factor = 1.1
